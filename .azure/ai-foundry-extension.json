{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "VeriMantle extension for Azure AI Foundry / Semantic Kernel"
  },
  "parameters": {
    "aiHubName": {
      "type": "string",
      "metadata": {
        "description": "Azure AI Foundry Hub name"
      }
    },
    "verimantleEndpoint": {
      "type": "string",
      "metadata": {
        "description": "VeriMantle API endpoint URL"
      }
    },
    "verimantleApiKey": {
      "type": "securestring",
      "metadata": {
        "description": "VeriMantle API key for authentication"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.MachineLearningServices/workspaces/connections",
      "apiVersion": "2024-01-01-preview",
      "name": "[concat(parameters('aiHubName'), '/verimantle')]",
      "properties": {
        "category": "CustomKeys",
        "authType": "ApiKey",
        "credentials": {
          "key": "[parameters('verimantleApiKey')]"
        },
        "target": "[parameters('verimantleEndpoint')]",
        "metadata": {
          "displayName": "VeriMantle Agent Kernel",
          "description": "Verified AI Agent infrastructure with policy enforcement, liability tracking, and agent-to-agent payments"
        }
      }
    }
  ],
  "outputs": {
    "connectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.MachineLearningServices/workspaces/connections', parameters('aiHubName'), 'verimantle')]"
    }
  }
}
