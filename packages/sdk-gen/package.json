{
  "name": "@verimantle/sdk-gen",
  "version": "1.0.0",
  "private": true,
  "description": "Polyglot SDK generator for VeriMantle",
  "scripts": {
    "generate:all": "npm run generate:csharp && npm run generate:python && npm run generate:go",
    "generate:csharp": "openapi-generator-cli generate -i ../apps/gateway/openapi.yaml -g csharp -o ./csharp --additional-properties=packageName=VeriMantle.Client,targetFramework=net8.0",
    "generate:python": "openapi-generator-cli generate -i ../apps/gateway/openapi.yaml -g python -o ./python --additional-properties=packageName=verimantle_client",
    "generate:go": "openapi-generator-cli generate -i ../apps/gateway/openapi.yaml -g go -o ./go --additional-properties=packageName=verimantle",
    "generate:java": "openapi-generator-cli generate -i ../apps/gateway/openapi.yaml -g java -o ./java --additional-properties=groupId=dev.verimantle,artifactId=verimantle-client",
    "generate:typescript": "openapi-generator-cli generate -i ../apps/gateway/openapi.yaml -g typescript-axios -o ./typescript"
  },
  "devDependencies": {
    "@openapitools/openapi-generator-cli": "^2.13.0"
  }
}
